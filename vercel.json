{
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": { "runtime": "python3.11" }
    }
  ],
  "routes": [
    { "src": "/static/(.*)",  "dest": "/static/$1" },      // archivos estáticos
    { "src": "/api/(.*)",     "dest": "/api/index.py" },   // API (JSON)
    { "src": "/(.*)",         "dest": "/api/index.py" }    // páginas HTML
  ]
}
